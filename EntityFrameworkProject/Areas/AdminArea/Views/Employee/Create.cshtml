@model Employee 
@{
    ViewData["Title"] = "Create";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <span class="text-danger">@ViewBag.Message</span>
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <p class="card-description">
                            Category
                        </p>
                        <form asp-controller="Employee" asp-action="Create" class="forms-sample" method="post">
                            <div class="form-group"><div>
                                <label for="exampleInputUsername1">Fullname</label>
                                <input  type="text" class="form-control" asp-for="FullName">
                                <span class="text-danger my-1" asp-validation-for="FullName"></span></div>
                                <div>
                                    <label for="exampleInputUsername1">Age</label>
                                    <input  type="text" class="form-control" asp-for="Age">
                                    <span class="text-danger my-1" asp-validation-for="Age"></span>
                                </div>
                                <div>
                                    <label for="exampleInputUsername1">Position</label>
                                    <input  type="text" class="form-control" asp-for="Position">
                                    <span class="text-danger my-1" asp-validation-for="Position"></span>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <a asp-controller="Category" asp-action="Index" class="btn btn-light">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationPartial" />
}

